<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
      x:Class="MobileDev04.ContentViews.Views.MenuElementView"
      xmlns:models="clr-namespace:MobileDev04.ContentViews.Models" 
      x:DataType="models:MenuOption">
    <Image Grid.Row="0" Source="{Binding Image}" Style="{StaticResource ImageMenuStyle}"/>
    <Label Grid.Row="1" Text="{Binding Title}" Style="{StaticResource TitleLabelStyle}"/>
    <Label Grid.Row="2" Text="{Binding Subtitle}" Style="{StaticResource SubtitleLabelStyle}"/>
</Grid>